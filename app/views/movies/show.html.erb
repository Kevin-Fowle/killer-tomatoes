<div class="under-nav-bar">
<%= render 'movieinfo' %>
<% if logged_in? %>
  <%= link_to 'New Review', new_movie_review_path(@movie) %>
<% end %>
  <div class="reviews-container">
    <div class="review-header">
      <h2 class="review-all-title">Reviews</h2>
    </div>

  <% sorted_reviews_by_rating.each do |review| %>
    <div class="indiv-review-box">

          <div>
            <h4 class="review-title"> <%= link_to review.title, movie_review_path(@movie, review) %> </h4>
          </div>
          <div class="review-score">
            Score: <%= review.score%>/10
          </div>
          <div class="voting"><%= render partial: '/vote_up_down_count', :locals => {:review => review} %></div>
          <%= render partial: '/users/user_trust_icon', :locals => {:review => review}, :class => "tomato-icon" %>

          <div class="review-author">
            Written By: <a href="/users/<%=review.reviewer.id%>"> <%= review.reviewer.name %></a>
          </div>

      <div class="review-body">
        <%= review.body %>
      </div>







      <%= link_to "Comments (#{review.comments.count})", movie_review_path(@movie, review) %>
    </div>
    <% end %>
  </div>
</div>
