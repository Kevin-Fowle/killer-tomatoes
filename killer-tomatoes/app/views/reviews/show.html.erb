<%= render '/movies/movieinfo' %>
<div class="review-header">
  <h2>Review</h2>
</div>

<div class="indiv-review-box">

  <div class="review-body">
    <%= @review.body %>
  </div>

  <div class="review-author">
    Written By: <%= @review.reviewer.name %>
  </div>

  <div class="review-score">
    Score: <%= @review.score%>/10
  </div>
</div>


<div class="comment-header">
  <h3>Comments</h3>
</div>

<div class="comment-container">
  <% @comments.each do |comment| %>
  <div class="indiv-comment-container">
    <div class="comment-body">
      Body: <%= comment.body %>
    </div>
    <div class="comment-author">
      By: <%= comment.commenter.name %>
    </div>
  </div>
</div>
<% end %>
<div class="new-comment-container">
  <%= form_for :comment, url: movie_review_comments_path(@movie, @review) do |f| %>
    Comment Body: <%= f.text_area :body %>
    <%= f.submit "Comment" %>
  <% end %>
</div>
