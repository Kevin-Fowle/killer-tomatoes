
<% if review.reviewer.status == "Gold" %>
  <%= image_tag("killer_tomato_icon.png", size: "35x35", alt: "Gold User") %>
<% elsif review.reviewer.status == "Silver" %>
  <%= image_tag("orange_tomato.png", size: "35x35", alt: "Silver User") %>
<% elsif review.reviewer.status == "Tomato" %>
  <%= image_tag("green_tomato.png", size: "35x35", alt: "Tomato User") %>
<% else review.reviewer.status == "Untrusted" %>
  <%= image_tag("gray_tomato.png", size: "35x35", alt: "Untrusted User") %>
<%end%>
