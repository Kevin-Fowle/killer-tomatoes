<div class="movie-info-container">
  <div class="movie-header">
    <h1><%= @movie.title %></h1>
  </div>

  <div class="movie-profile-pic">
    <img src="<%=@movie.image %>" alt="<%=@movie.title %>" />
  </div>

  <div class="movie-description">
    <p>
      <%= @movie.description %>
    </p>
  </div>
</div>
